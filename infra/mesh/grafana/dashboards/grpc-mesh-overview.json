{
  "dashboard": {
    "id": null,
    "title": "gRPC Mesh Overview",
    "description": "Overview dashboard for gRPC service mesh monitoring",
    "tags": ["grpc", "mesh", "aivo-platform"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "grpc:service_up",
            "legendFormat": "{{ service_name }}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "grpc:request_rate",
            "legendFormat": "{{ service_name }}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Request Latency Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "grpc:request_duration_p50",
            "legendFormat": "p50 - {{ service_name }}",
            "refId": "A"
          },
          {
            "expr": "grpc:request_duration_p95",
            "legendFormat": "p95 - {{ service_name }}",
            "refId": "B"
          },
          {
            "expr": "grpc:request_duration_p99",
            "legendFormat": "p99 - {{ service_name }}",
            "refId": "C"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "grpc:error_rate * 100",
            "legendFormat": "{{ service_name }}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "yAxes": [
          {
            "label": "Error Rate (%)",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 5,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "grpc:circuit_breaker_open",
            "legendFormat": "{{ service_name }}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "red", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "envoy_cluster_upstream_cx_active",
            "legendFormat": "{{ service_name }}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Request Volume by Response Code",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_total[5m])) by (envoy_response_code)",
            "legendFormat": "{{ envoy_response_code }}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "gRPC Method Performance",
        "type": "table",
        "targets": [
          {
            "expr": "topk(20, grpc:request_rate)",
            "legendFormat": "",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "renameByName": {
                "service_name": "Service",
                "cluster_name": "Cluster",
                "Value": "RPS"
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(grpc:request_rate, service_name)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(grpc:request_rate, cluster_name)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Alerts",
          "type": "prometheus",
          "target": {
            "expr": "ALERTS{alertstate=\"firing\"}"
          },
          "titleFormat": "{{ alertname }}",
          "textFormat": "{{ description }}"
        }
      ]
    }
  }
}
