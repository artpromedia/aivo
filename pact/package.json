{
  "name": "@aivo/pact-tests",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "jest --runInBand",
    "test:consumers": "jest --testMatch='**/consumers/**/*.test.ts' --runInBand",
    "test:providers": "jest --testMatch='**/providers/**/*.test.ts' --runInBand",
    "pact:publish": "pact-broker publish --broker-base-url=$PACT_BROKER_URL --broker-token=$PACT_BROKER_TOKEN pacts",
    "pact:can-i-deploy": "pact-broker can-i-deploy --broker-base-url=$PACT_BROKER_URL --broker-token=$PACT_BROKER_TOKEN",
    "pact:verify": "pnpm run test:providers"
  },
  "devDependencies": {
    "@mswjs/data": "^0.16.2",
    "@pact-foundation/pact": "^15.0.1",
    "@pact-foundation/pact-node": "^10.18.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "cross-fetch": "^3.2.0",
    "jest": "^29.7.0",
    "msw": "^2.11.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.4"
  }
}
