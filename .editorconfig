root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4

[*.{java,cpp,hpp}]
indent_style = space
indent_size = 4

[*.{md,yml,yaml}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf
