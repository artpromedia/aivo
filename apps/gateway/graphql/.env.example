# Environment
NODE_ENV=development
PORT=4000

# GraphQL
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true
GRAPHQL_DEBUG=true

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=300
CACHE_ENABLED=true

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_ISSUER=aivo-gateway
JWT_AUDIENCE=aivo-services

# Service URLs
LEARNER_SERVICE_URL=http://localhost:8000
IEP_SERVICE_URL=http://localhost:8001
ANALYTICS_SERVICE_URL=http://localhost:8002
ADMIN_PORTAL_SERVICE_URL=http://localhost:8095

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Query Complexity
MAX_QUERY_COMPLEXITY=1000
MAX_QUERY_DEPTH=10

# Persisted Queries
PERSISTED_QUERIES_ENABLED=true
PERSISTED_QUERIES_TTL=86400

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
