# Environment variables for Device Enrollment Service

# Database Configuration
DATABASE_URL=postgresql+asyncpg://device_user:device_password@localhost:5432/device_db
SQL_DEBUG=false

# Service Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,*.aivo.com

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
BOOTSTRAP_TOKEN_LIFETIME_HOURS=24
CHALLENGE_LIFETIME_MINUTES=15
CERTIFICATE_LIFETIME_DAYS=365

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Service Discovery (optional)
SERVICE_NAME=device-enroll-svc
SERVICE_VERSION=1.0.0
