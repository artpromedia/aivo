# IEP Service Environment Configuration

# Server settings
IEP_HOST=localhost
IEP_PORT=8000
IEP_DEBUG=true
IEP_LOG_LEVEL=INFO

# GraphQL configuration
IEP_GRAPHQL_PATH=/graphql
IEP_GRAPHIQL_ENABLED=true

# CRDT configuration
IEP_CRDT_SYNC_INTERVAL=30
IEP_CRDT_CONFLICT_RESOLUTION=last_write_wins

# Approval service configuration
IEP_APPROVAL_SERVICE_URL=http://localhost:8080/approvals
IEP_APPROVAL_TIMEOUT=30.0
IEP_DUAL_APPROVAL_REQUIRED=true

# Event publishing configuration
IEP_EVENT_ENDPOINT=http://localhost:8080/events
IEP_EVENT_TIMEOUT=10.0

# IEP document settings
IEP_MAX_GOALS_PER_IEP=10
IEP_MAX_ACCOMMODATIONS_PER_IEP=20
IEP_IEP_EXPIRY_DAYS=365

# Security settings
IEP_JWT_SECRET_KEY=your-secret-key-change-in-production
IEP_JWT_ALGORITHM=HS256
IEP_JWT_EXPIRATION_HOURS=24
