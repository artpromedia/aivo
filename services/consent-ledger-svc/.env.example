# Consent & Preferences Ledger Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME="Consent & Preferences Ledger"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL="INFO"

# Database
DATABASE_URL="postgresql+asyncpg://consent_user:consent_pass@localhost:5432/consent_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_ALWAYS_EAGER=false

# Security
SECRET_KEY="your-very-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_ALLOW_CREDENTIALS=true

# Data Export (GDPR)
EXPORT_STORAGE_PATH="/tmp/consent_exports"
EXPORT_MAX_FILE_SIZE_MB=500
EXPORT_RETENTION_DAYS=30
EXPORT_DEADLINE_DAYS=10

# Data Deletion (GDPR)
DELETION_VERIFICATION_DELAY_HOURS=24
DELETION_RETRY_MAX_ATTEMPTS=3
DELETION_RETENTION_YEARS=7

# Audit
AUDIT_LOG_RETENTION_YEARS=7
AUDIT_INTEGRITY_CHECK_ENABLED=true
AUDIT_LOG_ENCRYPTION_ENABLED=true

# Email (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true
SMTP_FROM_EMAIL="noreply@district.edu"

# Parental Consent (COPPA)
PARENTAL_VERIFICATION_TOKEN_EXPIRY_HOURS=72
PARENTAL_RIGHTS_EXPIRY_DAYS=365
COPPA_AGE_THRESHOLD=13

# External Services
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET_PREFIX="consent-ledger"

MONGODB_URL=""
MONGODB_DATABASE="consent_data"

SNOWFLAKE_ACCOUNT=""
SNOWFLAKE_USER=""
SNOWFLAKE_PASSWORD=""
SNOWFLAKE_DATABASE=""
SNOWFLAKE_SCHEMA=""
SNOWFLAKE_WAREHOUSE=""

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Monitoring
SENTRY_DSN=""
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
