# Database Configuration
DATABASE_URL=postgresql+asyncpg://compliance_user:compliance_pass@localhost:5432/compliance_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Compliance Export Configuration
COMPLIANCE_MASTER_KEY=your-secure-32-character-master-key
COMPLIANCE_EXPORT_PATH=/secure/export/files
EXPORT_RETENTION_DAYS=90
MAX_CONCURRENT_EXPORTS=5

# Audit Configuration
AUDIT_LOG_RETENTION_YEARS=7
AUDIT_INTEGRITY_CHECK_ENABLED=true

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Security Configuration
SECRET_KEY=your-secret-key-for-jwt-tokens
CORS_ORIGINS=["http://localhost:3000", "https://admin.district.edu"]
ALLOWED_HOSTS=["localhost", "compliance.district.edu"]

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=100
TEMP_FILE_PATH=/tmp/compliance
