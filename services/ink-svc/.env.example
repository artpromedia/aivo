# Application Settings
APP_NAME=Ink Capture Service
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ink_db

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=aivo-ink-storage
S3_PREFIX=ink-pages

# Event Service Configuration
EVENT_SERVICE_URL=http://localhost:8080/events
ENABLE_EVENTS=true

# Security and Validation
MAX_STROKES_PER_REQUEST=1000
MAX_POINTS_PER_STROKE=10000
SESSION_TIMEOUT_MINUTES=60

# Content Moderation
ENABLE_CONSENT_GATE=true
ENABLE_MEDIA_GATE=true
