{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node10",
    "ignoreDeprecations": "6.0"
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules", ".eslintrc.*", "*.config.js"]
}
