<mjml>
  <mj-head>
    <mj-title>Enrollment Decision - {{ student_name }}</mj-title>
    <mj-font
      name="Inter"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
    />
    <mj-attributes>
      <mj-all font-family="Inter, Arial, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#374151" />
    </mj-attributes>
    <mj-style>
      .decision-approved {
        background-color: #ecfdf5;
        border: 2px solid #10b981;
        border-radius: 12px;
        padding: 24px;
        margin: 20px 0;
        text-align: center;
      }
      .decision-denied {
        background-color: #fef2f2;
        border: 2px solid #ef4444;
        border-radius: 12px;
        padding: 24px;
        margin: 20px 0;
        text-align: center;
      }
      .decision-waitlisted {
        background-color: #fffbeb;
        border: 2px solid #f59e0b;
        border-radius: 12px;
        padding: 24px;
        margin: 20px 0;
        text-align: center;
      }
      .next-steps {
        background-color: #f8fafc;
        padding: 20px;
        border-radius: 8px;
        margin: 16px 0;
      }
      .contact-info {
        background-color: #f0f9ff;
        padding: 20px;
        border-radius: 8px;
        margin: 16px 0;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#F9FAFB">
    <!-- Header -->
    <mj-section background-color="#FFFFFF" padding="24px">
      <mj-column>
        <mj-text
          font-size="24px"
          font-weight="700"
          color="#1F2937"
          align="center"
        >
          {{ school_name }}
        </mj-text>
        <mj-text font-size="14px" color="#6B7280" align="center">
          Enrollment Services
        </mj-text>
        <mj-divider border-color="#E5E7EB" border-width="1px" />
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#FFFFFF" padding="32px 24px">
      <mj-column>
        <mj-text font-size="20px" font-weight="600" color="#1F2937">
          Dear {{ parent_name }},
        </mj-text>

        <mj-text>
          Thank you for your interest in enrolling {{ student_name }} at
          {{ school_name }}. We have completed our review of the enrollment
          application.
        </mj-text>

        <!-- Decision Banner -->
        {% if decision.lower() == 'approved' %}
        <mj-raw>
          <div class="decision-approved"> <h2 style="margin: 0 0 12px 0; color:
          #059669; font-size: 24px; font-weight: 700;"> üéâ Enrollment Approved!
          </h2> <p style="margin: 0; color: #047857; font-size: 18px;
          font-weight: 500;"> We are excited to welcome {{ student_name }} to
          our school community. </p> </div>
        </mj-raw>
        {% elif decision.lower() == 'denied' %}
        <mj-raw>
          <div class="decision-denied"> <h2 style="margin: 0 0 12px 0; color:
          #DC2626; font-size: 24px; font-weight: 700;"> Enrollment Decision
          </h2> <p style="margin: 0; color: #B91C1C; font-size: 18px;
          font-weight: 500;"> Unfortunately, we are unable to approve enrollment
          at this time. </p> </div>
        </mj-raw>
        {% elif decision.lower() == 'waitlisted' %}
        <mj-raw>
          <div class="decision-waitlisted"> <h2 style="margin: 0 0 12px 0;
          color: #D97706; font-size: 24px; font-weight: 700;"> üìã Waitlisted
          </h2> <p style="margin: 0; color: #92400E; font-size: 18px;
          font-weight: 500;">
          {{ student_name }} has been placed on our enrollment waitlist. </p>
          </div>
        </mj-raw>
        {% endif %}

        <mj-text color="#6B7280">
          <strong>Decision Date:</strong>
          {{ decision_date.strftime('%B %d, %Y') }}
        </mj-text>

        {% if enrollment_date %}
        <mj-text color="#374151">
          <strong>Enrollment Start Date:</strong>
          {{ enrollment_date.strftime('%B %d, %Y') }}
        </mj-text>
        {% endif %}

        <!-- Next Steps -->
        {% if next_steps %}
        <mj-raw>
          <div class="next-steps"> <h3 style="margin: 0 0 12px 0; color:
          #1F2937; font-size: 18px; font-weight: 600;">Next Steps</h3> <div
          style="color: #374151;">
          {{ next_steps | safe }}
          </div> </div>
        </mj-raw>
        {% endif %}

        <!-- Approved-specific content -->
        {% if decision.lower() == 'approved' %} {% if additional_requirements %}
        <mj-text font-weight="600" color="#1F2937">
          Required Documentation:
        </mj-text>
        <mj-text color="#374151">
          {{ additional_requirements }}
        </mj-text>
        {% endif %} {% if portal_url %}
        <mj-button
          href="{{ portal_url }}"
          background-color="#10B981"
          padding="20px 0"
        >
          Access Parent Portal
        </mj-button>
        {% endif %} {% endif %}

        <!-- Denied-specific content -->
        {% if decision.lower() == 'denied' and appeal_process %}
        <mj-raw>
          <div class="next-steps"> <h3 style="margin: 0 0 12px 0; color:
          #1F2937; font-size: 18px; font-weight: 600;">Appeal Process</h3> <div
          style="color: #374151;">
          {{ appeal_process | safe }}
          </div> </div>
        </mj-raw>
        {% endif %}

        <!-- Waitlisted-specific content -->
        {% if decision.lower() == 'waitlisted' %}
        <mj-text color="#374151">
          You will be notified immediately if a space becomes available. We
          encourage you to keep your contact information up to date.
        </mj-text>
        {% endif %}
      </mj-column>
    </mj-section>

    <!-- Contact Information -->
    <mj-section background-color="#FFFFFF" padding="0 24px 32px">
      <mj-column>
        <mj-raw>
          <div class="contact-info"> <h3 style="margin: 0 0 12px 0; color:
          #1F2937; font-size: 18px; font-weight: 600;">Questions? Contact
          Us</h3> <p style="margin: 6px 0; color: #374151;"><strong>{{ contact_person or "School Registrar"



          }}</strong></p> {% if contact_email %} <p style="margin: 6px 0; color:
          #374151;">üìß {{ contact_email }}</p> {% endif %} {% if contact_phone
          %} <p style="margin: 6px 0; color: #374151;">üìû
          {{ contact_phone }}</p> {% endif %} {% if school_address %} <p
          style="margin: 6px 0; color: #374151;">üìç {{ school_address }}</p> {%
          endif %} </div>
        </mj-raw>
      </mj-column>
    </mj-section>

    <!-- Appreciation Message -->
    <mj-section background-color="#F8FAFC" padding="24px">
      <mj-column>
        <mj-text color="#374151" align="center">
          {% if decision.lower() == 'approved' %} We look forward to partnering
          with you in {{ student_name }}'s educational journey. {% else %} Thank
          you for considering {{ school_name }} for {{ student_name }}'s
          education. {% endif %}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#F3F4F6" padding="24px">
      <mj-column>
        <mj-text font-size="12px" color="#6B7280" align="center">
          This email was sent regarding the enrollment application for
          {{ student_name }}.
        </mj-text>
        <mj-text font-size="12px" color="#6B7280" align="center">
          ¬© {{ current_year or 2024 }} {{ school_name }}. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
