# Event Collector Service Configuration
# Copy this file to .env and configure as needed

# Service Configuration
SERVICE_NAME=event-collector
VERSION=1.0.0
DEBUG=false

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

# gRPC Server  
GRPC_HOST=0.0.0.0
GRPC_PORT=50051

# Kafka/Redpanda Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=learner.events
KAFKA_DLQ_TOPIC=learner.events.dlq
KAFKA_CLIENT_ID=event-collector
KAFKA_COMPRESSION_TYPE=gzip
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=5
KAFKA_RETRIES=3
KAFKA_RETRY_BACKOFF_MS=100

# Authentication (optional)
API_KEY=

# Performance Configuration
MAX_BATCH_SIZE=100
MAX_BATCH_SIZE_BYTES=1048576
STREAM_BATCH_SIZE=10

# Buffer Configuration
BUFFER_DIR=./buffer
BUFFER_RETENTION_HOURS=24
BUFFER_MAX_FILE_SIZE_MB=100
BUFFER_CLEANUP_INTERVAL_MINUTES=60

# DLQ Configuration
DLQ_ENABLED=true
DLQ_MAX_RETRIES=3
DLQ_RETRY_BACKOFF_MS=1000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_SECONDS=30

# Monitoring
METRICS_ENABLED=true
